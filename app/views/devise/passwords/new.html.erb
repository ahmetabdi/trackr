<div class="ui text container middle aligned center aligned grid">
  <div class="column">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'ui large form' }) do |f| %>
      <%= devise_error_messages! %>

      <div class="ui stacked segment">
        <h1>Reset Password</h1>
        <p>Enter your email address below and we'll send you a link to reset your password.</p>

        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.email_field :email, autofocus: true, placeholder: 'Email Address' %>
          </div>
        </div>
        <%= f.submit "Reset Password", class: 'ui fluid large teal submit button' %>
      </div>
    <% end %>

    <div class="ui message">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
