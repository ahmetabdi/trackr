<div class="ui grid">
  <div class="column">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'ui large form' }) do |f| %>
      <%= devise_error_messages! %>

      <div class="ui stacked segment">
        <div class="ui middle aligned center aligned grid">
          <div class="column">
            <h1>Register</h1>
          </div>
        </div>
        <div class="field">
          <label>Email Address</label>
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.email_field :email, autofocus: true, placeholder: 'E-mail address' %>
          </div>
        </div>
        <div class="field">
          <label>Password</label>
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password, autocomplete: 'off', placeholder: 'Password' %>
          </div>
        </div>
        <div class="field">
          <label>Password Confirmation</label>
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password_confirmation, autocomplete: 'off', placeholder: 'Password confirmation' %>
          </div>
        </div>
        <%= f.submit "Register", class: 'ui fluid large teal submit button' %>
      </div>
    <% end %>
  </div>
</div>
